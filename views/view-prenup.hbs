{{>navbar}}

<div id="prenup_info" style="display: none" data-prenup="{{prenupId}}" data-groom-person="{{groomPersonId}}" data-bride-person="{{bridePersonId}}" ></div>
  <div class="container" style="padding-left: 18%; padding-right: 10%;">
    <h1 class="my-3"> View Prenuptial Record </h1>
    {{!-- <u for="date_added">Date Added</u>
    <p>{{dateView date}}</p> --}}
    <hr>
    <div class="row">
      <legend>Bride's Name</legend>
      <div class="col">
        <u for="first_name">First Name</u>
        <p>{{brideFirst}}</p>
      </div>
      <div class="col">
        <u for="mid_name">Middle Initial</u>
        <p>{{brideMid}}</p>
      </div>
      <div class="col">
        <u for="last_name">Last Name</u>
        <p>{{brideLast}}</p>
      </div>
    </div>
    <hr>
    <div class="row">
      <legend>Groom's Name</legend>
      <div class="col">
        <u for="first_name">First Name</u>
        <p>{{groomFirst}}</p>
      </div>
      <div class="col">
        <u for="mid_name">Middle Initial</u>
        <p>{{groomMid}}</p>
      </div>
      <div class="col">
        <u for="last_name">Last Name</u>
        <p>{{groomLast}}</p>
      </div>
    </div>
    <hr>
    <div class="row">
        <u> Planned wedding date </u>
        <p>{{dateView weddingDate}}</p>
    </div>
    <hr>
    <div class="row my-3">
      <div class="col">
        <a><button class="btn btn-secondary mb-4">Wedding Record</button></a>
      </div>
      <div class="col d-flex justify-content-end">
          {{#if canSee}}
          <a href="/edit_prenup/{{prenupId}}"> <button class="btn btn-secondary mb-4">Edit Prenup Form</button> </a>
          {{/if}}
      </div>
    </div>
